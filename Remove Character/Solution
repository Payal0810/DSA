
public class Solution {

	public static String removeAllOccurrencesOfChar(String str, char ch) {
		// Your code goes here
		
		// output string 
		String finString = "";

		// loop for iterating string 
		for(int i=0; i<str.length(); i++){

			// checking the condition 
			if(str.charAt(i)!=ch){
				finString = finString + str.charAt(i);
			}
		}

		return finString;
	}

}
