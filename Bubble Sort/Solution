
public class Solution {
   
    public static void bubbleSort(int[] arr, int n) {
        //Your code goes here
      
    //   outer loop for passes 
    for(int i=0; i<n-1; i++){

        // inner loop for comparison 
        for(int j=0; j<n-1-i; j++){

            // comparing and swapping 
            if(arr[j]>arr[j+1]){
                int temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
            }
        }
    }
  }
}
